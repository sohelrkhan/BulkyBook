@model CoverType

<form method="post" asp-action="Create">
    <div class="border p-3 m-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row pb-2">
            <h2 class="text-primary">Create Cover Type</h2>
             <hr />
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Name"></label>
            <input asp-for="@Model.Name" class="form-control" />
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary" style="width:150px"><i class="bi bi-archive"></i>Save</button>
        <a asp-controller="CoverType" asp-action="Index" class="btn btn-primary" style="width:150px"><i class="bi bi-arrow-left"></i>Back to List</a>
    </div>
</form>

@section Scripts{ 
    @{ <partial name="_ValidationScriptsPartial"/> }
}

