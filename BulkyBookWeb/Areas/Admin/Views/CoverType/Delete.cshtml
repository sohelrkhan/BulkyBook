@model CoverType

<form method="post" asp-action="Delete">
    <input asp-for="@Model.Id" hidden/>
    <div class="border p-3 m-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row pb-2">
            <h2 class="text-primary">Delete Cover Type</h2>
             <hr />
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Name"></label>
            <input asp-for="@Model.Name" disabled class="form-control"/>
        </div>

        <button type="submit" class="btn btn-danger" style="width:150px"><i class="bi bi-trash"></i>Delete</button>
        <a asp-controller="CoverType" asp-action="Index" class="btn btn-primary" style="width:150px"><i class="bi bi-arrow-left"></i>Back to List</a>

    </div>
</form>

@section Scripts{ 
    @{ <partial name="_ValidationScriptsPartial"/> }
}

